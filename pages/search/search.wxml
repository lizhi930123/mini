<view class="container">
    <view class="search">
        <view class="go_search">
            <input type="text" placeholder="请输入角色名称" placeholder-class="input_style" bindinput="findval"/>
        </view>
        <text bindtap="search">搜索</text>
    </view>
    <scroll-view scroll-y class="content">
    <block wx:for="{{items}}">
        <view class="right_item" class="info_list">
            <view class="info_item">
                <image src="{{item.headimg}}"></image>
                <view class="info_content">
                        <text>{{item.name}}</text>
                        <text>{{item.description}}</text>
                </view>
                <text class="act_he" data-name="{{item.name}}" data-description="{{item.description}}" data-headimg="{{item.headimg}}" bindtap="act_he">扮演TA</text>
            </view>
        </view>
    </block>
    </scroll-view>
</view>